# !pip install gradio transformers

import gradio as gr
from transformers import pipeline

# Load pre-trained sentiment analysis model
classifier = pipeline("sentiment-analysis")

# Function to classify sentiment
def classify_sentiment(text):
    result = classifier(text)[0]
    label = result['label']
    if label == "POSITIVE":
        sentiment = "âœ… Positive ğŸ˜Š"
    elif label == "NEGATIVE":
        sentiment = "âŒ Negative ğŸ˜"
    else:
        sentiment = "âš–ï¸ Neutral ğŸ˜"
    return f"Sentiment: {sentiment}"

# Create Gradio interface with emojis
interface = gr.Interface(
    fn=classify_sentiment,
    inputs=gr.Textbox(
        lines=3,
        placeholder="âœï¸ Type something like 'I love this product!'",
        label="ğŸ“ Your Text Here",
        interactive=True
    ),
    outputs=gr.Textbox(
        label="ğŸ“Š AI-Predicted Sentiment",
        interactive=False
    ),
    title="ğŸ¤– AI Sentiment Analyzer",
    description="ğŸ” Analyze the sentiment of any text using Hugging Face Transformers. Get instant feedback: ğŸ˜Š Positive, ğŸ˜ Negative, or ğŸ˜ Neutral.",
    theme="compact",
    allow_flagging="never",
    live=True
)

# Launch the app
interface.launch()
